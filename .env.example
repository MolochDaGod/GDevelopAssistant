# Server Configuration
NODE_ENV=development
PORT=5000

# Database (Neon PostgreSQL - shared with Warlord-Crafting-Suite)
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/neondb?sslmode=require

# Session Management
SESSION_SECRET=change-this-session-secret

# ==============================================
# AI PROVIDERS
# ==============================================

# X.AI Grok (Game dev assistant chat)
XAI_API_KEY=

# OpenAI (Optional fallback)
OPENAI_API_KEY=

# ==============================================
# AUTHENTICATION
# ==============================================
# Auth handled by auth-gateway-flax.vercel.app
# No additional config needed â€” tokens stored in client localStorage

# Grudge Studio IDE Integration
GAME_API_GRUDA=

# ==============================================
# OBJECT STORAGE (Replit/Puter)
# ==============================================

# Public object search paths (comma-separated bucket:prefix pairs)
PUBLIC_OBJECT_SEARCH_PATHS=

# Private object directory
PRIVATE_OBJECT_DIR=

# ==============================================
# OPTIONAL FEATURES
# ==============================================

# Puter Cloud (client-side cloud storage)
PUTER_APP_ID=

# Google Cloud Storage (asset sync)
GCS_BUCKET_NAME=
GCS_PROJECT_ID=
